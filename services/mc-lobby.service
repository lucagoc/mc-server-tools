[Unit]
Description=Lobby MC server daemon
After=network-online.target
 
[Service]
Type=simple
 
User=ubuntu
Group=ubuntu
UMask=007
 
ExecStart=/home/ubuntu/MCserver/lobby/start.sh

Restart=on-failure
 
# Configures the time to wait before service is stopped forcefully.
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
